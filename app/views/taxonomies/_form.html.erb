<%= form_for(@taxonomy) do |f| %>
  <fieldset>
    <% if @taxonomy.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@taxonomy.errors.count, "error") %> prohibited this taxonomy from being saved:</h2>

        <ul>
        <% @taxonomy.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    <% end %>
    <%= f.label :name, Taxonomy.human_attribute_name(:name) %>
